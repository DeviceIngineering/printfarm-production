# Файл переменных окружения для production
# Скопируйте этот файл в .env.prod и настройте значения

# ===========================================
# Django настройки
# ===========================================
SECRET_KEY=your-super-secret-production-key-min-50-chars-long-123456789
DEBUG=False
ALLOWED_HOSTS=your-domain.com,www.your-domain.com,server-ip-address

# ===========================================
# База данных PostgreSQL
# ===========================================
POSTGRES_DB=printfarm_db
POSTGRES_USER=printfarm_user
POSTGRES_PASSWORD=super_secure_password_123
DATABASE_URL=postgresql://printfarm_user:super_secure_password_123@db:5432/printfarm_db

# ===========================================
# Redis
# ===========================================
REDIS_URL=redis://redis:6379/0

# ===========================================
# МойСклад API
# ===========================================
MOYSKLAD_TOKEN=f9be4985f5e3488716c040ca52b8e04c7c0f9e0b
MOYSKLAD_DEFAULT_WAREHOUSE=241ed919-a631-11ee-0a80-07a9000bb947
MOYSKLAD_BASE_URL=https://api.moysklad.ru/api/remap/1.2

# ===========================================
# Celery
# ===========================================
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# ===========================================
# Логирование и мониторинг
# ===========================================
LOG_LEVEL=INFO
DJANGO_LOG_LEVEL=INFO

# ===========================================
# Email настройки (опционально)
# ===========================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.your-provider.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@domain.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=PrintFarm System <noreply@your-domain.com>

# ===========================================
# SSL/HTTPS настройки
# ===========================================
SECURE_SSL_REDIRECT=True
SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# ===========================================
# Backup и восстановление
# ===========================================
BACKUP_ENABLED=True
BACKUP_RETENTION_DAYS=30

# ===========================================
# Сторонние сервисы (заглушки)
# ===========================================
SIMPLEPRINT_API_KEY=your-api-key
SIMPLEPRINT_COMPANY_ID=27286
SIMPLEPRINT_USER_ID=31471

# ===========================================
# Дополнительные настройки
# ===========================================
TIME_ZONE=Europe/Moscow
LANGUAGE_CODE=ru-RU

# Максимальный размер загружаемых файлов (в байтах)
FILE_UPLOAD_MAX_MEMORY_SIZE=10485760  # 10MB

# CORS настройки (если нужны)
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOWED_ORIGINS=http://your-domain.com,https://your-domain.com
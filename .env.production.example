# PrintFarm Production v4.6 - Environment Variables
# Скопируйте этот файл в .env и заполните значения

# ========================================
# Django настройки
# ========================================
SECRET_KEY=your-secret-key-here-generate-with-openssl-rand-base64-32
DEBUG=False
ALLOWED_HOSTS=your-domain.com,192.168.1.100

# ========================================
# База данных PostgreSQL
# ========================================
POSTGRES_DB=printfarm_prod
POSTGRES_USER=printfarm_user
POSTGRES_PASSWORD=your-strong-database-password
DATABASE_URL=postgresql://printfarm_user:your-strong-database-password@db:5432/printfarm_prod

# ========================================
# Redis (кэш и очереди)
# ========================================
REDIS_URL=redis://redis:6379/0

# ========================================
# МойСклад API
# ========================================
MOYSKLAD_TOKEN=f9be4985f5e3488716c040ca52b8e04c7c0f9e0b
MOYSKLAD_DEFAULT_WAREHOUSE=241ed919-a631-11ee-0a80-07a9000bb947

# ========================================
# Celery (фоновые задачи)
# ========================================
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# ========================================
# Email настройки (опционально)
# ========================================
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password
# DEFAULT_FROM_EMAIL=your-email@gmail.com

# ========================================
# Безопасность (production)
# ========================================
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# ========================================
# Логирование
# ========================================
LOG_LEVEL=INFO
DJANGO_LOG_LEVEL=INFO

# ========================================
# Файлы и медиа
# ========================================
MEDIA_ROOT=/app/media
STATIC_ROOT=/app/static

# ========================================
# Timezone
# ========================================
TIME_ZONE=Europe/Moscow
USE_TZ=True

# ========================================
# Настройки интеграций (заглушки)
# ========================================
# SIMPLEPRINT_API_KEY=your-api-key
# SIMPLEPRINT_COMPANY_ID=27286
# SIMPLEPRINT_USER_ID=31471